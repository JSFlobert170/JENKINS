pipeline {
    agent any

    environment {
        NODE_ENV = 'development'
    }

    stages {
        stage('Install Dependencies') {
            steps {
                echo 'Installing Node.js dependencies...'
                sh 'npm install'
                sh 'npm install --save-dev mocha'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'Running unit tests...'
                sh '''
                if [ -f ./node_modules/.bin/mocha ]; then
                    npx mocha
                else
                    echo "⚠️ Mocha n'est pas installé. Vérifiez l'installation des dépendances."
                    exit 1
                fi
                '''
            }
        }

        stage('Build Project') {
            steps {
                echo 'Building the project...'
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Ici, vous pouvez ajouter un script de déploiement personnalisé
            }
        }
    }

    post {
        success {
            echo 'Pipeline executed successfully!'

            script {
                try {
                    slackSend (channel: '#ci-cd', message: "✅ Pipeline réussi : ${env.JOB_NAME} #${env.BUILD_NUMBER}")
                } catch (Exception e) {
                    echo "⚠️ Slack notification failed. Vérifiez que le plugin Slack est bien installé."
                }
            }
        }

        failure {
            echo 'Pipeline execution failed!'

            script {
                try {
                    slackSend (channel: '#ci-cd', message: "❌ Échec du pipeline : ${env.JOB_NAME} #${env.BUILD_NUMBER}")
                } catch (Exception e) {
                    echo "⚠️ Slack notification failed. Vérifiez que le plugin Slack est bien installé."
                }
            }
        }
    }
}
